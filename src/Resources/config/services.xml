<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Сервис полей -->
        <service id="ChannelProductDescription\Service\FieldService">
            <argument type="service" id="custom_field_set.repository"/>
            <argument type="service" id="sales_channel.repository"/>
            <argument type="service" id="language.repository"/>
        </service>

        <!-- Подписчики событий -->
        <service id="ChannelProductDescription\Subscriber\ChannelSync">
            <argument type="service" id="ChannelProductDescription\Service\FieldService"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="ChannelProductDescription\Subscriber\ProductPage">
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
